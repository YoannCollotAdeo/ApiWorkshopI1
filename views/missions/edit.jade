extends ../layout

block content
	h1.
		Mission ID #{mission._id}
	form(action='/missions/#{mission._id}/edit',method='post',name='updatemission',enctype='application/x-www-form-urlencoded')
		p Name:
			input#inputName(type='text', value='#{mission.name}', name='name')
		p Company:
			input#inputBadge(type='text', value='#{mission.company}', name='company')
		p
			input(type='hidden',value='PUT',name='_method')
		p
			button#btnSubmit(type='submit').
				Update
