extends ../layout

block content
    h1.
        #{title}

    - each mission, i in missions
        div
            h2
                = mission.name
            p
                = mission.company

            form(action='/missions/#{mission._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                input(type='hidden',value='DELETE',name='_method')
                button(type='submit').
                    Delete
            p
                a(href='/missions/#{mission._id}/edit') Edit
            p
                a(href='/missions/#{mission._id}') Show
